<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.vouov.ailk.app"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="4"/>
    <application android:label="@string/app_name" android:icon="@drawable/ailk_logo" android:name=".common.AppApplication" android:theme="@android:style/Theme.Light">
        <activity android:name=".ui.AppStart"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.Search" android:launchMode="singleInstance"/>
        <activity android:name=".ui.Login"  android:launchMode="singleInstance"/>
        <activity android:name=".ui.Detail" />
        <activity android:name=".ui.About"  android:launchMode="singleInstance"/>
        <activity android:name=".ui.Setting"  android:launchMode="singleInstance"/>
        <activity android:name=".ui.Favorite"  android:launchMode="singleInstance"/>
        <activity android:name=".ui.About"  android:launchMode="singleInstance"/>
        <activity android:name=".ui.Feedback"  android:launchMode="singleInstance"/>
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RESTART_PACKAGES"/>
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
</manifest> 
