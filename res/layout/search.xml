<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:id="@+id/layout_search">
    <LinearLayout
            android:id="@+id/search_header"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center" android:background="@drawable/widget_head_bg">

        <Spinner
                android:layout_width="80dp"
                android:layout_height="40dp"
                style="?android:buttonStyle"
                android:id="@+id/spi_condition" android:layout_marginTop="2dp"/>
        <EditText
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:text=""
                android:hint="查询条件"
                android:singleLine="true"
                android:id="@+id/txt_condition" android:background="@drawable/search_bg" />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/btn_search" android:background="@drawable/btn_search_bg"/>
    </LinearLayout>
    <ListView
            android:id="@+id/list_search_result"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>

</LinearLayout>